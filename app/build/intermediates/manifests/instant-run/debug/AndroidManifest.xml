<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.memory_athelete.memoryathletes"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="26" />

    <!-- <uses-permission android:name="android.permission.INTERNET" /> -->
    <!-- <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <meta-data
        android:name="android.support.VERSION"
        android:value="26.0.0-alpha1" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/launcher_ic"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Default" >

        <!-- android:largeHeap="true" -->

        <activity
            android:name="com.memory_athlete.memoryathletes.main.MainActivity"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main Activity options -->

        <activity android:name="com.memory_athlete.memoryathletes.main.GetPro" />
        <activity
            android:name="com.memory_athlete.memoryathletes.main.Login"
            android:parentActivityName="com.memory_athlete.memoryathletes.main.MainActivity" />
        <activity
            android:name="com.memory_athlete.memoryathletes.main.Learn"
            android:parentActivityName="com.memory_athlete.memoryathletes.main.MainActivity" />
        <activity
            android:name="com.memory_athlete.memoryathletes.recall.Recall"
            android:parentActivityName="com.memory_athlete.memoryathletes.main.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.memory_athlete.memoryathletes.main.Practice"
            android:parentActivityName="com.memory_athlete.memoryathletes.main.MainActivity" />
        <activity
            android:name="com.memory_athlete.memoryathletes.main.Preferences"
            android:parentActivityName="com.memory_athlete.memoryathletes.main.MainActivity" />
        <activity
            android:name="com.memory_athlete.memoryathletes.main.Apply"
            android:parentActivityName="com.memory_athlete.memoryathletes.main.MainActivity" />
        <activity
            android:name="com.memory_athlete.memoryathletes.mySpace.MySpace"
            android:parentActivityName="com.memory_athlete.memoryathletes.main.MainActivity" />
        <activity
            android:name="com.memory_athlete.memoryathletes.mySpace.WriteFile"
            android:parentActivityName="com.memory_athlete.memoryathletes.mySpace.MySpace" />
        <activity android:name="com.memory_athlete.memoryathletes.lessons.Lessons" />

        <!-- Practice Disciplines -->

        <activity
            android:name="com.memory_athlete.memoryathletes.disciplines.Numbers"
            android:parentActivityName="com.memory_athlete.memoryathletes.main.Practice"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.memory_athlete.memoryathletes.disciplines.Equations"
            android:parentActivityName="com.memory_athlete.memoryathletes.main.Practice"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.memory_athlete.memoryathletes.disciplines.Words"
            android:parentActivityName="com.memory_athlete.memoryathletes.main.Practice"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.memory_athlete.memoryathletes.disciplines.Names"
            android:parentActivityName="com.memory_athlete.memoryathletes.main.Practice"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.memory_athlete.memoryathletes.disciplines.Cards"
            android:parentActivityName="com.memory_athlete.memoryathletes.main.Practice"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.memory_athlete.memoryathletes.disciplines.BinaryDigits"
            android:parentActivityName="com.memory_athlete.memoryathletes.main.Practice"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.memory_athlete.memoryathletes.disciplines.Places"
            android:parentActivityName="com.memory_athlete.memoryathletes.main.Practice"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.memory_athlete.memoryathletes.disciplines.Foods"
            android:parentActivityName="com.memory_athlete.memoryathletes.main.Practice"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.memory_athlete.memoryathletes.disciplines.Dates"
            android:parentActivityName="com.memory_athlete.memoryathletes.main.Practice"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.memory_athlete.memoryathletes.disciplines.Colours"
            android:parentActivityName="com.memory_athlete.memoryathletes.main.Practice"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.memory_athlete.memoryathletes.disciplines.Letters"
            android:parentActivityName="com.memory_athlete.memoryathletes.main.Practice"
            android:screenOrientation="portrait" />

        <service
            android:name="com.memory_athlete.memoryathletes.services.ReminderJobService"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.firebase.jobdispatcher.ACTION_EXECUTE" />
            </intent-filter>
        </service>
        <service
            android:name="com.memory_athlete.memoryathletes.services.MySpaceJobService"
            android:enabled="true"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.firebase.jobdispatcher.ACTION_EXECUTE" />
            </intent-filter>
        </service>
        <!--
             Receives GooglePlay execution requests and forwards them to the
             appropriate internal service.
        -->
        <service
            android:name="com.firebase.jobdispatcher.GooglePlayReceiver"
            android:exported="true"
            android:permission="com.google.android.gms.permission.BIND_NETWORK_TASK_SERVICE" >
            <intent-filter>
                <action android:name="com.google.android.gms.gcm.ACTION_TASK_READY" />
            </intent-filter>
        </service>

        <provider
            android:name="com.android.tools.fd.runtime.InstantRunContentProvider"
            android:authorities="com.memory_athelete.memoryathletes.com.android.tools.fd.runtime.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>