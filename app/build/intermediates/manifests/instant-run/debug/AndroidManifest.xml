<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.maniksejwal.memoryathletes"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="25" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <meta-data
        android:name="android.support.VERSION"
        android:value="25.3.1" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.maniksejwal.memoryathletes.main.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main Activity options -->

        <activity android:name="com.maniksejwal.memoryathletes.main.GetPro" />
        <activity android:name="com.maniksejwal.memoryathletes.main.Learn" />
        <activity android:name="com.maniksejwal.memoryathletes.Lessons.Lessons" />
        <activity android:name="com.maniksejwal.memoryathletes.main.Login" />
        <activity
            android:name="com.maniksejwal.memoryathletes.main.OpenFile.Recall"
            android:configChanges="orientation|screenSize" />
        <activity android:name="com.maniksejwal.memoryathletes.main.Practice" />
        <activity
            android:name="com.maniksejwal.memoryathletes.main.Preferences"
            android:label="@string/title_activity_preferences" />

        <!-- Practice Disciplines -->

        <activity
            android:name="com.maniksejwal.memoryathletes.disciplines.RandomNumbers"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name="com.maniksejwal.memoryathletes.disciplines.Equations"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name="com.maniksejwal.memoryathletes.disciplines.RandomWords"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name="com.maniksejwal.memoryathletes.disciplines.RandomNames"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name="com.maniksejwal.memoryathletes.disciplines.Cards"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name="com.maniksejwal.memoryathletes.disciplines.BinaryDigits"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name="com.maniksejwal.memoryathletes.disciplines.Places"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name="com.maniksejwal.memoryathletes.disciplines.Foods"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name="com.maniksejwal.memoryathletes.disciplines.RandomDates"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name="com.maniksejwal.memoryathletes.disciplines.Colours"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name="com.maniksejwal.memoryathletes.disciplines.RandomLetters"
            android:configChanges="orientation|screenSize" />

        <provider
            android:name="com.android.tools.fd.runtime.InstantRunContentProvider"
            android:authorities="com.maniksejwal.memoryathletes.com.android.tools.fd.runtime.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>