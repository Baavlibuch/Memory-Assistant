<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.memory_athlete.memoryassistant">

    <!-- <uses-permission android:name="android.permission.INTERNET" /> -->
    <!-- <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/launcher_ic"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Default">

        <!-- android:largeHeap="true" -->

        <activity
            android:name="com.memory_athlete.memoryassistant.main.MainActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main Activity options -->

        <activity android:name="com.memory_athlete.memoryassistant.main.GetPro" />
        <activity
            android:name="com.memory_athlete.memoryassistant.main.Login"
            android:parentActivityName="com.memory_athlete.memoryassistant.main.MainActivity"
            tools:targetApi="jelly_bean" />
        <activity
            android:name="com.memory_athlete.memoryassistant.main.Learn"
            android:parentActivityName="com.memory_athlete.memoryassistant.main.MainActivity"
            tools:targetApi="jelly_bean" />
        <activity
            android:name="com.memory_athlete.memoryassistant.recall.Recall"
            android:parentActivityName="com.memory_athlete.memoryassistant.main.MainActivity"
            android:screenOrientation="portrait"
            tools:targetApi="jelly_bean" />
        <activity
            android:name="com.memory_athlete.memoryassistant.main.Practice"
            android:parentActivityName="com.memory_athlete.memoryassistant.main.MainActivity"
            tools:targetApi="jelly_bean" />
        <activity
            android:name="com.memory_athlete.memoryassistant.main.Preferences"
            android:parentActivityName="com.memory_athlete.memoryassistant.main.MainActivity"
            tools:targetApi="jelly_bean" />
        <activity
            android:name="com.memory_athlete.memoryassistant.main.Apply"
            android:parentActivityName="com.memory_athlete.memoryassistant.main.MainActivity"
            tools:targetApi="jelly_bean" />
        <activity
            android:name="com.memory_athlete.memoryassistant.mySpace.MySpace"
            android:parentActivityName="com.memory_athlete.memoryassistant.main.MainActivity"
            tools:targetApi="jelly_bean" />
        <activity
            android:name="com.memory_athlete.memoryassistant.mySpace.WriteFile"
            android:parentActivityName="com.memory_athlete.memoryassistant.mySpace.MySpace"
            tools:targetApi="jelly_bean" />
        <activity android:name="com.memory_athlete.memoryassistant.lessons.Lessons" />

        <!-- Practice Disciplines -->

        <activity
            android:name="com.memory_athlete.memoryassistant.disciplines.Numbers"
            android:parentActivityName="com.memory_athlete.memoryassistant.main.Practice"
            android:screenOrientation="portrait"
            tools:targetApi="jelly_bean" />
        <activity
            android:name="com.memory_athlete.memoryassistant.disciplines.Equations"
            android:parentActivityName="com.memory_athlete.memoryassistant.main.Practice"
            android:screenOrientation="portrait"
            tools:targetApi="jelly_bean" />
        <activity
            android:name="com.memory_athlete.memoryassistant.disciplines.Words"
            android:parentActivityName="com.memory_athlete.memoryassistant.main.Practice"
            android:screenOrientation="portrait"
            tools:targetApi="jelly_bean" />
        <activity
            android:name="com.memory_athlete.memoryassistant.disciplines.Names"
            android:parentActivityName="com.memory_athlete.memoryassistant.main.Practice"
            android:screenOrientation="portrait"
            tools:targetApi="jelly_bean" />
        <activity
            android:name="com.memory_athlete.memoryassistant.disciplines.Cards"
            android:parentActivityName="com.memory_athlete.memoryassistant.main.Practice"
            android:screenOrientation="portrait"
            tools:targetApi="jelly_bean" />
        <activity
            android:name="com.memory_athlete.memoryassistant.disciplines.BinaryDigits"
            android:parentActivityName="com.memory_athlete.memoryassistant.main.Practice"
            android:screenOrientation="portrait"
            tools:targetApi="jelly_bean" />
        <activity
            android:name="com.memory_athlete.memoryassistant.disciplines.Places"
            android:parentActivityName="com.memory_athlete.memoryassistant.main.Practice"
            android:screenOrientation="portrait"
            tools:targetApi="jelly_bean" />
        <activity
            android:name="com.memory_athlete.memoryassistant.disciplines.Foods"
            android:parentActivityName="com.memory_athlete.memoryassistant.main.Practice"
            android:screenOrientation="portrait"
            tools:targetApi="jelly_bean" />
        <activity
            android:name="com.memory_athlete.memoryassistant.disciplines.Dates"
            android:parentActivityName="com.memory_athlete.memoryassistant.main.Practice"
            android:screenOrientation="portrait"
            tools:targetApi="jelly_bean" />
        <activity
            android:name="com.memory_athlete.memoryassistant.disciplines.Colours"
            android:parentActivityName="com.memory_athlete.memoryassistant.main.Practice"
            android:screenOrientation="portrait"
            tools:targetApi="jelly_bean" />
        <activity
            android:name="com.memory_athlete.memoryassistant.disciplines.Letters"
            android:parentActivityName="com.memory_athlete.memoryassistant.main.Practice"
            android:screenOrientation="portrait"
            tools:targetApi="jelly_bean" />


        <service
            android:name="com.memory_athlete.memoryassistant.services.ReminderJobService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.firebase.jobdispatcher.ACTION_EXECUTE" />
            </intent-filter>
        </service>
        <service
            android:name="com.memory_athlete.memoryassistant.services.MySpaceJobService"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="com.firebase.jobdispatcher.ACTION_EXECUTE" />
            </intent-filter>
        </service>
    </application>

</manifest>