<resources>

    <!-- Base application theme. -->
    <style name="light" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/lightColorPrimary</item>
        <item name="colorPrimaryDark">@color/lightColorPrimaryDark</item>
        <item name="colorAccent">@color/lightColorAccent</item>
    </style>

    <style name="dark" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/darkColorPrimary</item>
        <item name="colorPrimaryDark">@color/darkColorPrimaryDark</item>
        <item name="colorAccent">@color/darkColorAccent</item>
    </style>

    <style name="pitch" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/pitchColorPrimary</item>
        <item name="colorPrimaryDark">@color/pitchColorPrimaryDark</item>
        <item name="colorAccent">@color/pitchColorAccent</item>
        <item name="android:textColor">@color/text</item>
    </style>



</resources>