<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.memory_athlete.memoryassistant">

    <!-- <uses-permission android:name="android.permission.INTERNET" /> -->
    <!-- <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/launcher_ic"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/light">

        <!-- android:largeHeap="true" -->

        <activity
            android:name=".main.MainActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main Activity options -->


        <!-- <activity android:name="com.memory_athlete.memoryassistant.main.GetPro" /> -->
        <!--
            <activity
            android:name="com.memory_athlete.memoryassistant.main.Login"
            android:parentActivityName="com.memory_athlete.memoryassistant.main.MainActivity"
            tools:targetApi="jelly_bean" />
        -->
        <activity android:name=".main.Learn"
            android:parentActivityName=".main.MainActivity"
            tools:targetApi="jelly_bean" />
        <activity android:name=".recall.Recall"
            android:parentActivityName=".main.MainActivity"
            android:screenOrientation="portrait"
            tools:targetApi="jelly_bean" />
        <activity android:name=".main.Practice"
            android:parentActivityName=".main.MainActivity"
            tools:targetApi="jelly_bean" />
        <activity android:name=".main.Preferences"
            android:parentActivityName=".main.MainActivity"
            tools:targetApi="jelly_bean" />
        <activity android:name=".main.Implement"
            android:parentActivityName=".mySpace.MySpace"
            tools:targetApi="jelly_bean"/>
        <activity android:name=".lessons.ImplementLesson"/>

        <activity
            android:name=".mySpace.MySpace"
            android:parentActivityName=".main.MainActivity"
            tools:targetApi="jelly_bean" />
        <activity
            android:name=".mySpace.WriteFile"
            android:parentActivityName=".mySpace.MySpace"
            tools:targetApi="jelly_bean" />
        <activity android:name=".lessons.Lessons" />


        <!-- Practice Disciplines -->

        <activity android:name=".disciplines.Numbers"
            android:parentActivityName=".main.Practice"
            android:screenOrientation="portrait"
            tools:targetApi="jelly_bean" />
        <activity android:name=".disciplines.Equations"
            android:parentActivityName=".main.Practice"
            android:screenOrientation="portrait"
            tools:targetApi="jelly_bean" />
        <activity android:name=".disciplines.Words"
            android:parentActivityName=".main.Practice"
            android:screenOrientation="portrait"
            tools:targetApi="jelly_bean" />
        <activity android:name=".disciplines.Names"
            android:parentActivityName=".main.Practice"
            android:screenOrientation="portrait"
            tools:targetApi="jelly_bean" />
        <activity android:name=".disciplines.Cards"
            android:parentActivityName=".main.Practice"
            android:screenOrientation="portrait"
            tools:targetApi="jelly_bean" />
        <activity android:name=".disciplines.BinaryDigits"
            android:parentActivityName=".main.Practice"
            android:screenOrientation="portrait"
            tools:targetApi="jelly_bean" />
        <activity android:name=".disciplines.Places"
            android:parentActivityName=".main.Practice"
            android:screenOrientation="portrait"
            tools:targetApi="jelly_bean" />
        <activity android:name=".disciplines.Foods"
            android:parentActivityName=".main.Practice"
            android:screenOrientation="portrait"
            tools:targetApi="jelly_bean" />
        <activity android:name=".disciplines.Dates"
            android:parentActivityName=".main.Practice"
            android:screenOrientation="portrait"
            tools:targetApi="jelly_bean" />
        <activity android:name=".disciplines.Colours"
            android:parentActivityName=".main.Practice"
            android:screenOrientation="portrait"
            tools:targetApi="jelly_bean" />
        <activity android:name=".disciplines.Letters"
            android:parentActivityName=".main.Practice"
            android:screenOrientation="portrait"
            tools:targetApi="jelly_bean" />

        <!-- Services -->

        <service android:name=".services.ReminderJobService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.firebase.jobdispatcher.ACTION_EXECUTE" />
            </intent-filter>
        </service>
        <service android:name=".services.MySpaceJobService"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="com.firebase.jobdispatcher.ACTION_EXECUTE" />
            </intent-filter>
        </service>
    </application>

</manifest>